<%- include("../partials/header") %>
<div class="container my-2">
    <h1 class="text-center">New Post</h1>
    <form action="/blog/<%= post._id %>?_method=PUT" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" name="blog[title]" type="text" value="<%= post.title %>"/>
        </div>
        <div class="form-group">
            <label for="title">Description</label>
            <input class="form-control" name="blog[description]" type="text" value="<%= post.description %>" />
        </div>
        <div class="form-group">
            <label for="title">Image</label>
            <input class="form-control" name="blog[image]" type="text" value="<%= post.image %>" />
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" cols="30" id="content" name="blog[content]" rows="10"><%= post.content %></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include("../partials/footer") %>
